<div class="container-fluid">
    <div class="row">
        <div class="card col-12">
            <div class="row">
                <div class="mx-auto">
                    <h3 class="text-center">{{data.titulo}}</h3>
                </div>
            </div>
            {{#each data.contenido}}
                <div class="row">
                    <p class="{{clase}}">{{{cuerpo}}}</p>
                </div>
                {{#if link}}
                    <div class="row">
                        <a href={{link}}>{{linkDisplay}}</a>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>